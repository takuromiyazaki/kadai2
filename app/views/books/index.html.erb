<body>
  <% if flash[:destroy] %>
  <p id="notice">
   <%= flash[:destroy] %>
  </p>
  <% end %>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><span><%= book.title %></span></td>
        <td><span><%= book.body %></span></td>
        <td><span><%= link_to 'Show', book_path(book.id) %></span></td>
        <td><span><%= link_to 'Edit', edit_book_path(book.id) %></span></td>
        <td><span><%= link_to 'Destroy', book_path(book.id), method: 'delete',"data-confirm" =>"Are you sure?" %></span></td>
     </tr>
     <% end %>
  </tbody>
</table>


<h2>New book</h2>

<% if @book.errors.any? %>
 <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book do |f| %>
<div class="field">
  <label for="book_title">Title</label>
<%= f.text_field :title %>
</div>
 <div class="field">
  <label for="book_body">Body</label>
<%= f.text_area :body %>

 </div>

<div class="actions">
<%= f.submit 'Create Books' %>
</div>
<% end %>


</body>

